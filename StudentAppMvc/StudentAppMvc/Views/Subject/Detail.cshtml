@model StudentAppMvc.Models.ViewModels.SubjectViewModel

@{
}

<h1>Subject Details</h1>

<hr />
<dl class="row">
    <dt class="col-sm-2">
        <label asp-for="Name" class="control-label"></label>
    </dt>
    <dd class="col-sm-10">
        @Model.Name
    </dd>
    <dt class="col-sm-2">
        <label asp-for="Description" class="control-label"></label>
    </dt>
    <dd class="col-sm-10">
        @Model.Description
    </dd>
    <dt class="col-sm-2">
        <label asp-for="SelectedTeachers" class="control-label"></label>
    </dt>
    <dd class="col-sm-10">
        <ul>
        @for (int i = 0; i < Model.SelectedTeachers.Count(); i++)
        { 
            
            @if (Model.SelectedTeachers[i].Selected)
            {
                <li>
                    <label asp-for="SelectedTeachers[i].Name">@Model.SelectedTeachers[i].Name</label>
                </li>
            }
            
        }
        </ul>
    </dd>
</dl>
<br />

<div>
    <a asp-action="Index">Back to List</a>
</div>
