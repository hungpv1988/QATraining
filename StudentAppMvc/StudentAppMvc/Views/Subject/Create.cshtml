@model StudentAppMvc.Models.ViewModels.SubjectViewModel

@{
    ViewData["Title"] = "Create Subject";
}

<h1>Create Subject</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @for (int i = 0; i < Model.SelectedTeachers.Count(); i++)
            {
                <div class="form-group">
                    <input asp-for="SelectedTeachers[i].Selected" type="checkbox" />
                    <label asp-for="SelectedTeachers[i].Name">@Model.SelectedTeachers[i].Name</label>
                    <input type="hidden" asp-for="SelectedTeachers[i].Id" />
                    <input type="hidden" asp-for="SelectedTeachers[i].Name" />
                </div>
            }

            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
