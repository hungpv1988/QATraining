@{
   SearchingCriteria searchingCriteria = ViewBag.SearchingCriteria;
}
@using StudentAppMvc.Models.ViewModels
@model StudentListViewModel


<h2>Search Page</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div class="form-group">
                <label for="control-label">Search for Name</label>
                <input type="text" id = "searchName" name = "searchName" value = @searchingCriteria.SearchName>
                <label for="control-label">Search for Gender</label>
                <select name="searchGender" class="form-control">
                @{
                    if (@searchingCriteria.SearchGender == null)
                    {
                        <option value="" selected="selected">-</option>
                        <option value="true">Male</option>
                        <option value="false">Female</option>
                    }
                }
                </select>
               
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
