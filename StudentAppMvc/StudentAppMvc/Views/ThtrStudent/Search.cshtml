@{
    ViewBag.Title = "Student Search";
    List<Student> students = ViewBag.StudentList;
    string keyword = !String.IsNullOrEmpty(ViewBag.keyword) ? ViewBag.keyword.ToString() : "";
}


<h2>Search Page</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div class="form-group">
                <label for="keyword">Search</label>
                <input type="text" id = "keyword" name = "keyword" class="form-control" value = @keyword />
               
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
@await Html.PartialAsync("_studentList", new {Students = students, keyword = keyword})
<br />
<div>
    <a asp-action="Index">Back to management</a>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
