<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div class="form-group">
                <label for="control-label">Search for Name</label>
                @{
                    if (@Model.SearchingCriteriaLst!= null && @Model.SearchingCriteriaLst.SearchName != null)
                    {
                        <input type="text" id="SearchName" name="SearchName" value=@Model.SearchingCriteriaLst.SearchName />
                    }
                    else
                    {
                        <input type="text" id="SearchName" name="SearchName" value="" />
                    }
                }
               
                <label for="control-label">Search for Gender</label>
                <select name="SearchGender" class="form-control">
                    @{
                        if (@Model.SearchingCriteriaLst!= null && @Model.SearchingCriteriaLst.SearchGender == null)
                        {
                            <option value="" selected="selected">-</option>
                            <option value="true">Male</option>
                            <option value="false">Female</option>
                        }
                    }
                </select>
               
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
