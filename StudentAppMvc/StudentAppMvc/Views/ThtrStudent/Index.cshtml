@*@model IEnumerable<StudentAppMvc.Models.ThtrStudent>*@

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Student Management";
    List<Student> students = ViewBag.StudentList;
    string keyword = !String.IsNullOrEmpty(ViewBag.Keyword) ? ViewBag.Keyword.ToString() : "";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div class="form-group">
                <label for="keyword">Search</label>
                <input type="text" id = "keyword" name = "keyword" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
@await Html.PartialAsync("_studentList", new {Students = students, Keyword = keyword})
<div>
    <a asp-action="Create">Create Student</a> | <a asp-action="Index" asp-route-lastestCount=5>Get last 5 students</a> | <a asp-action="Index">Get all students</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
