@using StudentAppMvc.Models.ViewModels
@model StudentListViewModel

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Student Management";
    //List<Student> students = ViewBag.StudentList;
    string keyword = !String.IsNullOrEmpty(ViewBag.Keyword) ? ViewBag.Keyword.ToString() : "";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
             <div class="form-group">
                <label for="control-label">Search for Name</label>
                <input type="text" id = "searchName" name = "searchName" value = "@Model.SearchName" />
                <label for="control-label">Search for Gender</label>
                <select name="searchGender" class="form-control">
                @{
                    if (@Model.SearchGender == null)
                    {
                        <option value="" selected="selected">-</option>
                        <option value="true">Male</option>
                        <option value="false">Female</option>
                    }
                }
                </select>
               
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
