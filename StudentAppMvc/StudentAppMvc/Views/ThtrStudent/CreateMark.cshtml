@*@model StudentAppMvc.Models.ViewModels.StudentSubjectModel*@
@using StudentAppMvc.Models.ViewModels
@model StudentSubjectModel

@{
    ViewData["Title"] = "Create Mark";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Create mark for student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMark">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentId" />
            <div class="form-group">
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SubjectList" class="control-label"></label>
               @* <select id="subjectId" name ="subjectId" class="form-control">*@
                <select asp-for="SubjectList" class="form-control">
                    @foreach (Subject item in Model.SubjectList)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="SubjectList" class="text-danger"></span>
            </div>
            <label class="control-label">Mark</label>
            <input type="text" id="Mark" name="Mark" class="form-control" required />
            <span class="text-danger"></span>
            @* <span asp-validation-for="StudentMark" class="text-danger"></span>*@

            <div class="form-group">
                <input type="submit" value="Create Mark" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
